{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "aws-profiles",
  "title": "AWS Profiles",
  "description": "",
  "icon": "command-icon.png",
  "author": "splusk",
  "owner": "splusk",
  "license": "MIT",
  "categories": [
    "Productivity"
  ],
  "commands": [
    {
      "name": "index",
      "title": "AWS Local Profiles",
      "description": "Show your local aws profiles to be selected",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "awsAutoCmdProfile",
      "type": "textfield",
      "required": false,
      "title": "Profile Name",
      "description": "Profile name to check to see if the command should be run after login",
      "default": ""
    },
    {
      "name": "awsCommand",
      "type": "textfield",
      "required": false,
      "title": "AWS Command",
      "description": "AWS Command to run if above profile selected",
      "default": ""
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.49.3",
    "@raycast/utils": "^1.4.10",
    "child_process": "^1.0.2",
    "fs": "^0.0.1-security",
    "os": "^0.1.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
